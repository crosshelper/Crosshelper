<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Crosshelper.Views.SearchPage"
             Title="Search">
    <NavigationPage.TitleView>
        <Button Text="Cancel" TextColor="White" HorizontalOptions="End" FontSize="17" Clicked="Handle_Canceled"/>
    </NavigationPage.TitleView>
        <StackLayout Margin="10,0,10,0">
            <StackLayout>
                <SearchBar Placeholder="Search problem type" BackgroundColor="White" FontSize="25" HeightRequest="100" MaxLength="25" HorizontalOptions="StartAndExpand"></SearchBar>
            </StackLayout>
            <ListView ItemSelected="Handle_ProblemSelected" ItemsSource="{Binding TypeProblems}">
                 <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label  FontSize="22"
                                    TextColor="#5F5F5F"
                                    Margin="10,6,10,6"
                                    Text="{Binding ProblemType}"
                                    HorizontalOptions="StartAndExpand"></Label>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
</ContentPage>
