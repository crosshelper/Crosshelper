<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Crosshelper.Views.SignInPage">
    <NavigationPage.TitleView>
        <Button Text="Cancel" TextColor="White" HorizontalOptions="End" Clicked="Handle_Canceled" FontSize="20"/>
    </NavigationPage.TitleView>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="15,10,15,10"> 
             <!--登入 Sign In lable -->
                    <Label Margin="0,5,16,5"
                           Text="Sign In"
                           TextColor="#FF4E17"
                           FontSize="26"
                           FontAttributes="Bold"
                           HorizontalOptions="End"/>
            <!--标签语love label -->
                    <Label Text="Find lovable local to help"
                           TextColor="#888888"
                           FontSize="16"
                           HorizontalTextAlignment="End"
                           FontAttributes="Bold" />
                    <Label Text="to help you solve problem"
                           TextColor="#888888"
                           Margin="0,0,0,0"
                           FontSize="16"
                           HorizontalTextAlignment="End"
                           FontAttributes="Bold" />
            <!--邮箱密码 Email&password input -->
                       <StackLayout VerticalOptions="Start" Margin="0,10,0,0">
                            <Label Text="Email" TextColor="#666666" FontSize="16" FontAttributes="Bold"/>
                            <Entry Placeholder="Enter your email address"
                                   FontSize="16"
                                   HeightRequest="45"
                                   Completed="SIPSignInEmailCompleted"
                                   x:Name="uNameEntry"/>
                            <Label Text="Password" TextColor="#666666" FontAttributes="Bold"/> 
                            <Entry Placeholder="Enter your email Password"
                                   FontSize="16"
                                   HeightRequest="45"
                                   Completed="SIPSignInPasswordCompleted"
                                   x:Name="pwdEntry"/>
                            <Label Text="" x:Name="signInTest"></Label>
                        </StackLayout >
           <!--登入按钮 Sign in Button -->   
            <StackLayout VerticalOptions="StartAndExpand">
                    <StackLayout VerticalOptions="Start">
                            <Button  
                                    Text="Sign In"
                                    TextColor="White"
                                    FontSize="Medium"
                                    HeightRequest="45"
                                    FontAttributes="Bold"
                                    BackgroundColor="#FF4E18"
                                    Margin="0,10,0,10"
                                    Clicked="SIPSignIn"/>
                    </StackLayout>
            <BoxView BackgroundColor="#999999" HeightRequest="1"></BoxView>
            <!-- 第三次登入 Third party sign in -->  
                    <StackLayout VerticalOptions="StartAndExpand" Orientation="Horizontal"  Margin="0,10,0,0">
                        <Button Text="Google" 
                                BorderColor="#575656" 
                                BorderWidth="1" 
                                WidthRequest="90" 
                                FontSize="Micro" 
                                TextColor="#575656" 
                                FontAttributes="Bold" 
                                BackgroundColor="White" 
                                HorizontalOptions="StartAndExpand"
                                Clicked="SIPGoogleSignInIcon"/>
                        <Button Text="Wechat" 
                                WidthRequest="90" 
                                FontSize="Micro" 
                                TextColor="White" 
                                BackgroundColor="#09B83E" 
                                FontAttributes="Bold" 
                                HorizontalOptions="CenterAndExpand"
                                Clicked="SIPWechatSignInIcon"/>
                       <Button 
                                Text="Facebook" 
                                WidthRequest="90" 
                                FontSize="Micro" 
                                TextColor="White" 
                                BackgroundColor="#3B5998" 
                                FontAttributes="Bold" 
                                HorizontalOptions="EndAndExpand"
                                Clicked="SIPFaceBookSignInIcon"/>
                    </StackLayout>
              <!-- 忘记和创建 forgot&create -->  
                <StackLayout Margin="0,-6,0,0" VerticalOptions="StartAndExpand" Orientation="Horizontal">
                    <Button Text="Forgot password" 
                            FontSize="Small" 
                            TextColor="#666666"
                            HorizontalOptions="StartAndExpand"
                            Clicked="SIPForgotPassword"/>
                    <Button Text="Create account" 
                            FontSize="Small" 
                            TextColor="#666666"
                            HorizontalOptions="EndAndExpand"
                            x:Name ="SIPCreateAccount"/>
                </StackLayout>
                <StackLayout VerticalOptions="StartAndExpand" Margin="0,0,0,0">
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                        <Label Text="By continuing, I accept the" 
                       FontSize="10" TextColor="#999999" HorizontalTextAlignment="Center"/>
                        <Label Text="Cycbis Terms" 
                       FontSize="10" TextColor="Blue" Margin="-3,0,0,0" HorizontalTextAlignment="Center"/>
                        <Label Text="of service" 
                       FontSize="10" TextColor="#999999" Margin="-3,0,0,0" HorizontalTextAlignment="Center"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                        <Label Text="and have read the Cycbis"  
                        FontSize="10" TextColor="#999999" Margin="0,-5,0,0" HorizontalTextAlignment="Center"/>
                        <Label Text="privacy policy."
                        FontSize="10" TextColor="Blue" Margin="-3,-5,0,0" HorizontalTextAlignment="Center"/>
                </StackLayout>
            </StackLayout>
            </StackLayout>
        </StackLayout>
      </ScrollView>
    </ContentPage.Content>
</ContentPage>