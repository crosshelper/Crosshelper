<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="Crosshelper.Views.DescribeProblemPage"
             Title="Describe your problem">
             <ScrollView>
                 <StackLayout Padding="20">
                    <!-- Case detial -->
                    <Label Text="Problem info" FontSize="18" TextColor="#555555"  FontAttributes="Bold" Margin="0,5,0,5"></Label>
                    <BoxView BackgroundColor="#555555" HeightRequest="0.5"></BoxView>
                            <StackLayout 
                                     VerticalOptions="FillAndExpand" 
                                     BackgroundColor="#F4F4F4">
                            <StackLayout BackgroundColor="White" VerticalOptions="FillAndExpand">
                                        <StackLayout>
                                            <StackLayout >
                                              <Label Text="Searching Area Zip Code" TextColor="#FF4E18" FontSize="17" FontAttributes="Bold"></Label>
                                            </StackLayout>
                                                <Label x:Name="MyLocationName"
                                                       Text="Not Selected" 
                                                       TextColor="#666666"
                                                       FontSize="18" 
                                                       TextDecorations="Underline"
                                                       Margin="0,0,0,5" 
                                                       FontAttributes="Bold">
                                                <Label.GestureRecognizers>
                                                    <TapGestureRecognizer Tapped="Handel_MyLocation" />
                                                </Label.GestureRecognizers>
                                                </Label>
                                            <StackLayout Orientation="Horizontal">
                                                <Label Text="Find nearby helper?" TextColor="#666666" VerticalOptions="Center" FontSize="18" FontAttributes="Bold"></Label>
                                                <Switch IsToggled="False" VerticalOptions="Center" HorizontalOptions="EndAndExpand" x:Name="DigitalBtn"></Switch>
                                            </StackLayout>
                                                <Label Text="Turn on the button to get a helper nearby." Margin="0,-5,0,5" TextColor="#888888" VerticalOptions="Center" FontSize="12" FontAttributes="Bold"></Label> 
                                            <StackLayout >
                                              <Label Text="Language Preference" TextColor="#FF4E18" FontSize="17" FontAttributes="Bold"></Label>
                                            </StackLayout>
                                                <Picker x:Name="languagepicker" SelectedItem="English" HeightRequest="45" Title="English" TitleColor="#555555" FontAttributes="Bold" FontSize="16" TextColor="#555555" >
                                                    <Picker.ItemsSource>
                                                        <x:Array Type="{x:Type x:String}">
                                                          <x:String>Chinese</x:String>
                                                          <x:String>English</x:String>
                                                          <x:String>French</x:String>
                                                          <x:String>German</x:String>
                                                          <x:String>Japanese</x:String>
                                                          <x:String>Korean</x:String>
                                                          <x:String>Portuguese</x:String>
                                                          <x:String>Spanish</x:String>
                                                          <x:String>Thai</x:String>
                                                          <x:String>Vietnamese</x:String>
                                                        </x:Array>
                                                    </Picker.ItemsSource>
                                                </Picker>
                                            </StackLayout>
                        <StackLayout>
                            <StackLayout>
                                <StackLayout Orientation="Horizontal" Margin="0,10,0,0">
                                <Label Text="Is emergency problem?" TextColor="#FF4E18" VerticalOptions="Center" FontSize="17" FontAttributes="Bold"></Label>
                                <Switch IsToggled="false" VerticalOptions="Center" HorizontalOptions="EndAndExpand" x:Name="switchButton"></Switch>
                                </StackLayout>
                            </StackLayout>
                            <Label Text="Problem description" FontSize="17" TextColor="#FF4E18" FontAttributes="Bold" Margin="0,10,0,0"></Label>
                            <BoxView BackgroundColor="#555555" HeightRequest="0.5"></BoxView>
                                <Editor x:Name="des" Margin="0,5,0,0"
                                        Placeholder="Describe your problem here!"
                                        
                                        HeightRequest="180" MaxLength="200"></Editor>
                            </StackLayout>
                    <StackLayout Orientation="Horizontal" x:Name="loading" IsVisible="false">
                        </StackLayout>
                        <Button x:Name="qwe "
                                Text="Next"
                                TextColor="White"
                                FontAttributes="Bold"
                                BackgroundColor="#FF4E18"
                                Margin="0,10,0,10"
                                HeightRequest="45"
                                Clicked="Handle_Next"
                                VerticalOptions="StartAndExpand"/>
                    </StackLayout>
                </StackLayout>
            </StackLayout>
            </ScrollView>
</ContentPage>